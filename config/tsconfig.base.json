{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": false,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "../src"
    ],
    "exclude": [
        "../src/test"
    ]
}