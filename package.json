{
  "name": "threads-es",
  "description": "A modern, zero-dependency WebWorker abstraction.",
  "version": "0.2.3",
  "author": "852Kerfunkle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/852Kerfunkle/threads-es.git"
  },
  "type": "module",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./index.js",
        "types": "./index.d.ts"
      }
    },
    "./controller": {
      "import": {
        "default": "./controller/index.js",
        "types": "./controller/index.d.ts"
      }
    },
    "./worker": {
      "import": {
        "default": "./worker/index.js",
        "types": "./worker/index.d.ts"
      }
    },
    "./shared": {
      "import": {
        "default": "./shared/index.js",
        "types": "./shared/index.d.ts"
      }
    }
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "clean": "rm -rf ./dist-esm",
    "build": "yarn clean && yarn build:esm",
    "build:esm": "tsc -p ./config/tsconfig.esm.json",
    "bundle": "yarn build && cp package.json LICENSE README.md dist-esm/",
    "bundle-local": "yarn bundle && cd dist-esm/ && yarn pack",
    "release": "yarn bundle && yarn publish ./dist-esm --access public",
    "test": "web-test-runner",
    "test-watch": "web-test-runner --watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "eqeqeq": 1,
      "curly": [
        "error",
        "multi-line"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "@typescript-eslint/no-explicit-any": [
        "off",
        {
          "ignoreRestArgs": true
        }
      ]
    },
    "root": true
  }
}
