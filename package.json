{
  "name": "threads-es",
  "description": "A modern, zero dependency WebWorker library.",
  "version": "0.1.1",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm rum clean && tsc",
    "test": "web-test-runner",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "eqeqeq": 1,
      "curly": [
        "error",
        "multi-line"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "@typescript-eslint/no-explicit-any": [
        "off",
        {
          "ignoreRestArgs": true
        }
      ]
    },
    "root": true
  }
}
